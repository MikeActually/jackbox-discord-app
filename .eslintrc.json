{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "sort-requires/sort-requires": 2
    },
    "plugins": [
        "chai-friendly",
        "sort-requires"
    ]
}